<% content_for :categories_css do %>
  <% if s["button_color"] %>

    .<%= section_id %>__categories__button--ghost {
      color: <%= s["button_color"]["value"] %>;
      border-color: <%= s["button_color"]["value"] %>;
    }
  <% end %>

  <% if s["button_color_hover"] %>
    .<%= section_id %>__categories__button--ghost:hover {
      background-color: <%= s["button_color_hover"]["value"] %>;
      border-color: <%= s["button_color_hover"]["value"] %>;
